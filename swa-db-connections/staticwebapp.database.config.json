{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v0.9.7/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('my-connection-string')",
    "options": {
      "set-session-context": false
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "production"
    }
  },
  "entities": {
    "Purchase": {
      "source": "dbo.Purchase",
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ],
      "relationships": {
        "category": {
          "cardinality": "one",
          "target.entity": "Category"
        }      
      }
    },
    "User": {
      "source": "dbo.User",
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ],
      "relationships": {
        "categories": {
          "cardinality": "many",
          "target.entity": "Category"
        }      
      }
    },
    "Category": {
      "source": "dbo.Category",
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ],
      "relationships": {
        "user": {
          "cardinality": "one",
          "target.entity": "User"
        },
        "purchases": {
          "cardinality": "many",
          "target.entity": "Purchase"
        }     
      }
    }
  }
}